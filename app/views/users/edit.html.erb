<h2>プロフィール編集</h2>
<p>Your Football ID</p>
<p><%= @user.yourfoot_ID %></p>

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">ニックネーム</label>
  <%= f.text_field :nickname, autofocus: true %>
  <label for="inputImage">アイコン画像</label>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "noimage.jpg"%>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label for="inputName">自己紹介文</label>
  <%= f.text_field :introduction, autofocus: true %>
  <%= f.submit "変更を保存" %>
<% end %>

<%= link_to "退会する", followers_path %>