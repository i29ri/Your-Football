<div class="row">

<div class="col-4 mx-auto">
<h2>プロフィール編集</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "noimage.jpg"%>
<p>Your Football ID</p>
<p><%= @user.yourfoot_ID %></p>

<%= form_with model:@user, local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="form-field">ニックネーム  　<%= f.text_field :nickname, autofocus: true %></div>
  <div class="form-field">アイコン画像  　<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></div>
  <div class="form-field">
    <%= f.label "推しチーム" %>  　　<%= f.collection_select :id, Team.all, :id, :name,:prompt => "チームを選択" %>
  </div>
  <div class="form-field">自己紹介文　　  <%= f.text_field :introduction, autofocus: true %></div>
  <%= f.submit "変更を保存" %>
<% end %>
<div class="form-field">
<button type="button" class="btn btn-secondary btn-sm">
  <%= link_to "退会する", unsubscribe_path, class: "unsubscribe-btn" %>
</button>
</div></div></div>