<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>アイコン</th>
      <th>ユーザーID</th>
      <th>ニックネーム</th>
      <th>推しチーム</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "noimage.jpg"%></td>
        <td><%= user.yourfoot_ID %></td>
        <td><%= user.nickname %></td>
        <td>
          <% if user.pickteam.nil? %>
            <p>推しチーム：未選択</p>
          <% else %>
            <p><%= user.pickteam.team.name %></p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>