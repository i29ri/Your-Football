<h1>チーム詳細</h1>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>チーム名</th>
      <th>アイコン</th>
      <th>試合一覧</th>
    </tr>
  </thead>
    <tbody>
      <td><%= @team.name %></td>
    </tr>
  </tbody>
</table>

  <% @matches.each do |match| %>
      <tr>
        <td><%= match.season %>年</td>
        <td>第<%= match.section %>節</td>
        <td><%= match.match_day.strftime('%Y/%m/%d') %></td>
        <td><%= match.stadium_name %></td>
        <td><%= link_to match_path(match) do %>
          <%= match.team_relationship.home.name %><%= match.home_goal %> vs <%#= match.team_relationship_id %><%= match.away_goal %>
        <% end %>
      </tr>
    <% end %>
