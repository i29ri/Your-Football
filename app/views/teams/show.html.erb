<h1>チーム詳細</h1>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>チーム名</th>
      <th>アイコン</th>
      <th>試合一覧</th>
    </tr>
  </thead>
    <tbody>
      <td><%= @team.name %></td>
    </tr>
  </tbody>
</table>

    <% @matches.each do |mr| %>
      <tr>
        <td><%= mr.match.season %>年</td>
        <td>第<%= mr.match.section %>節</td>
        <td><%= mr.match.match_day.strftime('%Y/%m/%d') %></td>
        <td><%= mr.match.stadium_name %></td>
        <td><%= link_to match_path(mr.match) do %>
          <%= mr.match.team_relationships.find_by(home_flg:true).team.name %><%= mr.match.home_goal %> vs
          <%= mr.match.team_relationships.find_by(home_flg:false).team.name %><%= mr.match.away_goal %>
        <% end %>
      </tr>
    <% end %>
