<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_for(current_user.user_relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'フォローを外す', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.user_relationships.create) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'フォローする', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>


<p>フォロワー数</p><%= user.followers.count %>
<p>フォロー数</p><%= user.followings.count %>


<%= link_to "フォロワー一覧", followers_path(user) %>
<%= link_to "フォロー一覧", followings_path(user) %>
