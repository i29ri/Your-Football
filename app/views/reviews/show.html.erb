<h1>Reviews#show</h1>
<p>上部に試合情報</p>


  <%= link_to user_path(@review.user) do %>
    <%= @review.user.nickname %>
  <% end %>
  <%= @review.comment %>


  <% if @review.favorited_by?(current_user) %>
    <p>
      <%= link_to match_review_review_favorite_path(@review), method: :delete do %>
        ♥<%= @review.review_favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to match_review_review_favorites_path(@match.id, @review.id), method: :post do %>
        ♡<%= @review.review_favorites.count %> いいね
      <% end %>
    </p>
  <% end %>